<div class="container">

<h1>Our Products</h1>

<% if @products.any? %>
<div class="row">
  <% @products.each do |product| %>
  <div class="col md 4">
    <p><%= product.name %></p>
    <p><%= product.description %></p>
    <p><%= product.price %></p>
  </div>
  <% end %>
  <% end %>

</div>
</div>
